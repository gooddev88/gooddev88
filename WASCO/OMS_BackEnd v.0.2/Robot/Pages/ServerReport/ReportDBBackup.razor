@page "/ServerReport/ReportDBBackup"
@using Robot.Data.DA.ServerReport
@inject ServerReportService _serverReportService

<SpinLoader IsLoading="isLoading">
    <LoadingTemplate>
        <div class="col-12 text-center" style="background-color: transparent; height: 100%; vertical-align: middle;">
            <br /><br />
            <div class="row pt-2">
                <div class="col-10 mx-auto">
                    <label style="color:orange; font-size:x-large;">... รอโหลดสักครู่ ...</label><br /><br /><br /><br />
                    <CircleFade Color="orange" Size="100px" Center="true" />
                </div>
            </div>
        </div>
    </LoadingTemplate>
    <ContentTemplate>

        <div class="row">
            <div class="col-6">
                <Breadcrumb Mode="BreadcrumbMode.Auto">
                    <BreadcrumbItem>
                        <BreadcrumbLink To="Menu/MenuMaster/TOOLS">@menuGroupCaption</BreadcrumbLink>
                    </BreadcrumbItem>
                    <BreadcrumbItem>
                        <BreadcrumbLink To="ServerReport/ReportMenu">@menuCaption</BreadcrumbLink>
                    </BreadcrumbItem>
                </Breadcrumb>
            </div>

         
        </div>

        @* --ค้นหา--*@
        <Accordion>
            <Collapse Visible="@collapse1Visible">
                <CollapseHeader>
                    <Heading Size="HeadingSize.Is5">
                        <Button Clicked="@(()=>collapse1Visible = !collapse1Visible)">แสดงการค้นหา</Button>
                    </Heading>
                </CollapseHeader>
                <CollapseBody>
                    <div class="row">
                        <div class="col-md-2 col-12">
                            <label>วันที่ </label>
                            <TelerikDatePicker @bind-Value="_serverReportService.filter.DateBegin"
                                               Format="dd/MM/yyyy">
                            </TelerikDatePicker>

                        </div>
                        <div class="col-md-2 col-12">
                            <label>ถึงวันที่ </label>
                            <TelerikDatePicker @bind-Value="_serverReportService.filter.DateEnd" 
                                               Format="dd/MM/yyyy">
                            </TelerikDatePicker>
                        </div>
                        <div class="col-4 pt-4">
                            <div class="input-group">
                                <input type="text" class="form-control form-control-sm" placeholder="คำค้นหา" @bind-value="@_serverReportService.filter.SearchText">
                                <TelerikButton @onclick="@SearchAction" ThemeColor="@(ThemeConstants.Button.ThemeColor.Primary)">ค้นหา</TelerikButton>
                            </div>
                        </div>
                    </div>
                </CollapseBody>
            </Collapse>
        </Accordion>

        <div class="row pt-3">
            <div class="col-md-12">
                <TelerikGrid Data=@DocList
                             Pageable="true"
                             Groupable="false"
                             Sortable="true"
                             Resizable="true"
                             Reorderable="true"
                             PageSize="30"
                             Navigable="true">
                  
                    <GridToolBar>
                        <GridCommandButton Command="ExcelExport" Icon="file-excel">Export to Excel</GridCommandButton>
                        <label class="k-checkbox-label"><TelerikCheckBox @bind-Value="@ExportAllPages" />Export All Pages</label>
                    </GridToolBar>

                    <GridExport>
                        <GridExcelExport FileName="telerik-grid-export" AllPages="@ExportAllPages" />
                    </GridExport>
                    <GridColumns>
                  
                        <GridColumn Field=@nameof(vw_db_backup_history.Server) Title="Server" Width="150px" />
                        <GridColumn Field=@nameof(vw_db_backup_history.database_name) Title="ชื่อข้อมูล" Width="150px" />
                        <GridColumn Field=@nameof(vw_db_backup_history.backup_start_date) Title="วันที่เริ่มต้น" Width="180px" DisplayFormat="{0:dd/MM/yyyy HH:mm:ss}" />
                        <GridColumn Field=@nameof(vw_db_backup_history.backup_finish_date) Title="วันทีล่าสุด" Width="180px" DisplayFormat="{0:dd/MM/yyyy HH:mm:ss}" />
                        <GridColumn Field=@nameof(vw_db_backup_history.job_date) Title="วันที่ทำงาน" Width="150px" DisplayFormat="{0:dd/MM/yyyy}" />
                        <GridColumn Field=@nameof(vw_db_backup_history.expiration_date) Title="วันหมดอายุ" Width="150px" DisplayFormat="{0:dd/MM/yyyy}" />
                        <GridColumn Field=@nameof(vw_db_backup_history.backup_type) Title="ประเภทข้อมูล" Width="150px" />
                        <GridColumn Field=@nameof(vw_db_backup_history.collation_name) Title="การเปรียบเทียบข้อมูล" Width="200px" />
                        <GridColumn Field=@nameof(vw_db_backup_history.backup_size) Title="ขนาดข้อมูล" Width="150px"  />
                        <GridColumn Field=@nameof(vw_db_backup_history.logical_device_name) Title="ชื่ออุปกรณ์" Width="150px" />
                        <GridColumn Field=@nameof(vw_db_backup_history.physical_device_name) Title="ที่อยู่ไฟล์ข้อมูล" Width="500px" />                  
                        <GridColumn Field=@nameof(vw_db_backup_history.backupset_name) Title="ชุดสำรองข้อมูล" Width="160px" />
                        <GridColumn Field=@nameof(vw_db_backup_history.description) Title="คำอธิบาย" Width="150px" />
                    </GridColumns>
                </TelerikGrid>
            </div>
        </div>


    </ContentTemplate>
</SpinLoader>

@code {
    bool isLoading = true;
    bool collapse1Visible = true;
  
    string menuCaption = "";
    string menuGroupCaption = "";
    
    bool ExportAllPages { get; set; } = true;
    bool ShowFilterRow = false;
    ServerReportService.Filter filter = new ServerReportService.Filter();
    List<vw_db_backup_history> DocList = new List<vw_db_backup_history>();

    protected override async Task OnInitializedAsync() {
     //   filter = await Task.Run(() => _serverReportService.GetSessionFiterSet());
        if (filter == null) {
            filter = _serverReportService.NewFilterSet();
        }
    
        await Task.Run(() => login.CheckLogin());
        await Task.Run(LoadData);
        await InvokeAsync(StateHasChanged);


    }

    async void LoadData() {
         
        DocList = ServerReportService.ListBackupDB(_serverReportService.filter);
        isLoading = false;
        await SetActiveControl();
        await InvokeAsync(StateHasChanged);
    }
 

    async Task SetActiveControl() {
        await CheckPermission();
    }
    async Task CheckPermission() {
        var menu = LogInService.GetMenuInfo(login.LoginInfo, "206");
        menuCaption = menu.Name;
        menuGroupCaption = LogInService.GetMenuGroup(login.LoginInfo, menu.GroupID).Name;
        if (!login.CanOpen(login.LoginInfo, "206")) {//206 report server
            nav.NavigateTo("NoPermissionPage");
        }
      
    }

 

    async void SearchAction() {
        isLoading = true;
        await Task.Run(LoadData);
        isLoading = false;
        await InvokeAsync(StateHasChanged);
    }

   

}
