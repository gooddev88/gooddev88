    async void SearchAction() {
        isLoading = true;
        await Task.Run(LoadData);
        isLoading = false;
        await InvokeAsync(StateHasChanged);
    }


    void CheckedChanged(bool value) {
        Filter.ShowActive = value;
    }





    async void NewDoc() {
      
        nav.NavigateTo($"/Order/OrderNewDoc/{menu}", false);
        isLoading = false;

        await InvokeAsync(StateHasChanged);
    }


    async void Edit(vw_POS_ORDERHead select_data) {
        var rcom = login.LoginInfo.CurrentRootCompany.CompanyID;
        var com = login.LoginInfo.CurrentCompany.CompanyID;
        isLoading = true;
        await sessionStorage.SetItemAsync(POSOrderService.sessionActiveId, select_data.OrdID);
        posorderService.DocSet = POSOrderService.GetDocSetByID(select_data.OrdID, rcom);
        nav.NavigateTo($"/Order/OrderDetail/{menu}", false);
        isLoading = false;
        await InvokeAsync(StateHasChanged);
    }


    public void Back() {
        nav.NavigateTo("Dashboard/StartBoard");
