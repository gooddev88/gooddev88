                            <label class="k-checkbox-label"><TelerikCheckBox @bind-Value="@ExportAllPages" /> Export All Pages</label>
                            <span class="k-toolbar-spacer"></span> @* add this spacer to keep the searchbox on the right *@
                            <GridSearchBox />
                        </GridToolBar>
                        <GridExport>
                            <GridExcelExport FileName="telerik-grid-export" AllPages="@ExportAllPages" OnBeforeExport="@OnBeforeExcelExport" />
                        </GridExport>
                        <GridColumns>
                            <GridColumn Field="@(nameof(Help.DataRow.dataid))" Title="dataid" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.originator_realname))" Title="originator_realname" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.budget_yr))" Title="budget_yr" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.evt_type))" Title="evt_type" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.evt_type_etc))" Title="evt_type_etc" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.fk_table_7763))" Title="fk_table_7763" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_type))" Title="mit_loc_type" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_name))" Title="mit_loc_name" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_moo))" Title="mit_loc_moo" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_tmb))" Title="mit_loc_tmb" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_amp))" Title="mit_loc_amp" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_prv))" Title="mit_loc_prv" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_lat))" Title="mit_loc_lat" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_loc_long))" Title="mit_loc_long" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.start_dt))" Title="start_dt" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.completed_dt))" Title="completed_dt" Width="150px" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_1_all_total))" Title="mit_1_all_total" Width="150px" DisplayFormat="{0:0}" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_2_all_total))" Title="mit_2_all_total" Width="150px" DisplayFormat="{0:0}" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_3_all_total))" Title="mit_3_all_total" Width="150px" DisplayFormat="{0:0}" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_4_all_total))" Title="mit_4_all_total" Width="150px" DisplayFormat="{0:0}" />
                            <GridColumn Field="@(nameof(Help.DataRow.mit_5_all_total))" Title="mit_5_all_total" Width="150px" DisplayFormat="{0:0}" />
                            <GridColumn Field="@(nameof(Help.DataRow.entrydate))" Title="entrydate" DisplayFormat="{0:dd/MM/yyyy}" Width="150px" />
                        </GridColumns>
                    </TelerikGrid>
        </div>
    </div>

@code {
    [Inject] public IJSRuntime JsInterop { get; set; }
    [Inject] public IConfiguration config { get; set; }

    bool ExportAllPages { get; set; } = true;
    public List<string> ExportColumns { get; set; } = new List<string>();
    public bool CancelExport { get; set; }
    public string search { get; set; } = "11";
    public List<Help.DataRow> data_set { get; set; }
    public List<Help.DataRow> ndata { get; set; }
    bool isLoading = false;

    //bool VisibleLoaded { get; set; }

    protected override async Task OnInitializedAsync() {
        //await LoadData();
    }

    private void OnSearch(object input) {
        if (data_set != null) {
            ndata = data_set.Where(o =>
         (
            o.originator_realname.ToLower().Contains(search)
            || o.evt_type.ToLower().Contains(search)
             || search == ""
         )
     ).ToList();
        }
    }

    async private Task LoadData() {
        try {
            isLoading = true;
            var res = await Http.GetAsync($"api/ApiMaster/GetApiInfo?apiid=Help");
            var conn = JsonSerializer.Deserialize<vw_api_master>(await res.Content.ReadAsStringAsync(), new JsonSerializerOptions {
                    PropertyNameCaseInsensitive = true,
                    ReferenceHandler = ReferenceHandler.Preserve
                });
            string url = $"{conn.base_url}{conn.api_url}?province={search}";
            var query = await Task.Run(() => _clientService.GetAllAsync<List<Help.DataRow>>(url));
            if (query.StatusCode != "OK") {
                return;
            }
            data_set = (List<Help.DataRow>)query.Result;
            ndata = data_set;
            isLoading = false;
            await InvokeAsync(StateHasChanged);
        } catch (Exception ex) {
            var rr = ex.Message;
        } finally {
            isLoading = false;
        }
    }

    async void BtnLoad() {
        await LoadData();
    }

    public void OnBeforeExcelExport(GridBeforeExcelExportEventArgs args) {
        if (ExportColumns.Any()) {
            args.Columns = args.Columns.Where(col => ExportColumns.Contains(col.Field)).ToList();
        }

        args.IsCancelled = CancelExport;
    }

}
