    async Task CheckIsRefresh() {
        try {
            if (_docCateService.DocSet == null) {
                string docid = await sessionStorage.GetItemAsync<string>(Globals.Active_DocCateID);
                if (!string.IsNullOrEmpty(docid)) {
                    _docCateService.DocSet = await _docCateService.GetDocSet(docid);
                } else {
                    _docCateService.DocSet = DocCateService.NewTransaction();
                }
            }
        } catch (Exception ex) {
            var xx = ex.Message;
        }
    }

    protected async Task LoadData() {
        BindData();
        await CheckPermission();
    }

    async Task CheckPermission() {
        var menu = UserService.GetMenuInfo(login.LogInInfo, "431");
        menuCaption = menu.menu_name;
        var Permissionmenu = login.LogInInfo.UserInMenu.Where(o => o.MenuID == "431").FirstOrDefault();
        if (!Convert.ToBoolean(Permissionmenu.IsDelete)) {
            isShowDelete = true;
        }
    }

    async Task LoadGrdDocCate() {
        DocList = await _docCateService.ListDoc(SearchText);
    }

    async Task SearchAction() {
        await Task.Run(LoadGrdDocCate);
        await InvokeAsync(StateHasChanged);
    }

    public async void BindData() {
        var h = _docCateService.DocSet.head;
        if (!string.IsNullOrEmpty(h.cate_id)) {
            Sort = h.sort;
        }else {
            Sort = await _docCateService.GenSort();
        }

        await InvokeAsync(StateHasChanged);
    }

    bool ValidData() {
        var h = _docCateService.DocSet.head;
        bool isvalid = true;
        string Errmsg = "";

        //if (cateid == "") {
        //    Errmsg = "!! ระบุ รหัสหมวดหมู่เอกสาร";
        //    isvalid = false;
        //}

        if (h.cate_name == "") {
            Errmsg = "ระบุ ชื่อหมวดหมู่เอกสาร";
            isvalid = false;
        }

        //var checksort = _docCateService.GenSort();
        //if (Sort >= Convert.ToInt32(checksort))
        //{
        //    Errmsg = "ห้ามใส่ลำดับมากกว่า";
        //    isvalid = false;
        //}

        if (!isvalid) {
            //Swal.FireAsync("", Errmsg, "error");
            Caption_dialog = Errmsg;
            Error_dialog = "error";
            dialog_Visible = true;
        }
        return isvalid;
    }

    protected async Task<bool> PrepairDataSave() {
        var h = _docCateService.DocSet.head;

        bool isnew = h.cate_id == "" ? true : false;
        if (isnew)
        {
            if (string.IsNullOrEmpty(h.cate_id))
            {
                List<string>? list_docid = await Task.Run(() => _iDRuunerService.GetNewIDV2("DOCCATE", "DPM", "",DateTime.Now.Date, true, "th"));
                h.cate_id = list_docid[1];
            }
        }

        h.sort = Sort;
        return isnew;
    }

    public async void OnSave() {
        if (!ValidData()) {
            return;
        }

        var h = _docCateService.DocSet.head;
        var isnew = await Task.Run(() => PrepairDataSave());
        string strPayload = JsonSerializer.Serialize(_docCateService.DocSet);
        string url = $"api/DocCate/SaveDocCate";
        var response = await Http.PostAsJsonAsync(url, strPayload);
        var status = response.StatusCode;
        if (status.ToString().ToLower() != "ok") {
        } else {
            var r = response.Content.ReadFromJsonAsync<I_BasicResult>().Result;
            if (r.Result == "fail") {
                //await Swal.FireAsync("", r.Message1, "error");
                Caption_dialog = r.Message1;
                Error_dialog = "error";
                dialog_Visible = true;
            } else {
                _docCateService.DocSet = await _docCateService.GetDocSet(h.cate_id);
                await sessionStorage.SetItemAsync(Globals.Active_DocCateID, h.cate_id);
                if (isnew)
                {
                    var rs = await _logTranService.CreateTransLog(h.cate_id,login.LogInInfo.CurrentUser, "หมวดหมู่เอกสารเผยแพร่", "เพิ่ม หมวดหมู่เอกสารเผยแพร่");
                }else
                {
                    var rs = await _logTranService.CreateTransLog(h.cate_id,login.LogInInfo.CurrentUser, "หมวดหมู่เอกสารเผยแพร่", "แก้ไข หมวดหมู่เอกสารเผยแพร่");
                }
                BindData();
                Caption_dialog = "บันทึกข้อมูลสำเร็จ";
                Error_dialog = "success";
                dialog_Visible = true;
                await InvokeAsync(StateHasChanged); 
            }
        }
    }

    public async void ConfirmSave()
    {
        dialog_Visible = false;
        isPopupMain = false;
        await Task.Run(LoadGrdDocCate);
        await InvokeAsync(StateHasChanged);
    }

    // SelectImage
    async void SelectImage(vw_icon_set data) {
        dialog_images_Visible = true;
        iconid = data.icon_id;
        fileid = data.file_id;
        Caption_dialog = "เลือกภาพนี้เพื่ออัพโหลด";
        Error_dialog = "success";
        await InvokeAsync(StateHasChanged);
    }

    public async void ConfirmImage()
    {
        string user = login.LogInInfo.CurrentUser;
        var h = _docCateService.DocSet.head;

        var datafile = await Task.Run(() => _filego.GetFileInBytePostgres("DPM","","ICON_CATEGORY",iconid));
        var file = await Task.Run(() => _filego.GetFileIdPostgres("DPM","","ICON_CATEGORY",iconid));

        upload_file = new List<FilesInfo>();
        var nfile = await _filego.NewFilesInfoPostgres("PUBLISH_CATEGORY","DPM","",h.cate_id);
        nfile.data = Convert.ToBase64String(datafile.data);
        nfile.file_type = file.filetype;
        nfile.fileName = file.filename;
        upload_file.Add(nfile);

        if (_docCateService.DocSet.files.Count() > 0)
        {
            var rr = await Task.Run(async () => _filego.DeleteFileByFileIdPostgres("DPM", "", "PUBLISH_CATEGORY", h.cate_id,_docCateService.DocSet.files.FirstOrDefault().file_id,user));
        }

        var data = await _filego.SaveToFileGo(upload_file, user);
        _docCateService.DocSet = await _docCateService.GetDocSet(h.cate_id);

        iconid = "";
        fileid = "";
        dialog_images_Visible = false;
        isShowIconSet = false;

        await InvokeAsync(StateHasChanged);
    }

