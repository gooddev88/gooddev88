        Caption = "เพิ่มเอกสาร";
        isPopupMain = true;
        await sessionStorage.RemoveItemAsync(Globals.Active_DocCateID);
        _docCateService.DocSet = DocCateService.NewTransaction();
        await Task.Run(LoadData);
        await InvokeAsync(StateHasChanged);
    }

