    async void DeleteLine(vw_publishdoc_cate data) {
        SweetAlertResult result = await Swal.FireAsync(new SweetAlertOptions {
                Title = "Warning",
                Text = $"ยืนยันการลบเอกสาร",
                ShowCancelButton = true,
                ConfirmButtonText = "Yes",
                CancelButtonText = "No"
            });
        if (string.IsNullOrEmpty(result.Value)) {
            return;
        }

        if (data.cate_id == "DFG")
        {
            await Swal.FireAsync("","!! ห้ามลบหมวดหมู่ Data Governance Framework", "error");
            return;
        }

        var rs = await _docCateService.DeleteDoc(data.cate_id);
        var r = await _logTranService.CreateTransLog(data.cate_id,login.LogInInfo.CurrentUser, "หมวดหมู่เอกสารเผยแพร่", "ลบ หมวดหมู่เอกสารเผยแพร่");
        if (rs.Result == "ok") {
            grd?.Rebind();
        } else {
            await Swal.FireAsync("", rs.Message1, "error");
        }
        await Task.Run(LoadGrdDocCate);
        await InvokeAsync(StateHasChanged);
    }

